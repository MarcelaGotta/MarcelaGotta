  form(role='form').form-inline.form-send
        .box-what-name
            div.presentation
                p For a better user experience
                p Please write your name, or some nickname to refer to you
        input(type="text" ng-model="$root.nombre" title="Please, write your name" placeholder="Your Name Here :)" required='').form-control.nombre
